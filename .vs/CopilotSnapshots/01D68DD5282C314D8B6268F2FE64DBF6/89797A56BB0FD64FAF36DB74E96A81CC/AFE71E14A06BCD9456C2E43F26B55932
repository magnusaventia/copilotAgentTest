@section Scripts {
    <script>
        // Update score display for welcome screen
        document.getElementById('scoreDisplay').textContent = 'Poeng: 0 | Sporsmal: 0/12';
        
        // Add focus management
        document.addEventListener('DOMContentLoaded', function() {
            // Focus the main heading for screen readers
            document.getElementById('welcome-heading').focus();
            
            // Add enhanced keyboard support for the start button
            const startButton = document.querySelector('a[href="/quiz"]');
            if (startButton) {
                startButton.addEventListener('keydown', function(e) {
                    if (e.key === 'Enter' || e.key === ' ') {
                        e.preventDefault();
                        window.location.href = '/quiz';
                    }
                });
            }
        });
    </script>
}
